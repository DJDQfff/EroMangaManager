<Page x:Class="EroMangaManager.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      xmlns:vm="using:EroMangaManager.ViewModels"
      mc:Ignorable="d">
    <Grid>
        <muxc:NavigationView x:Name="MainNavigationView"
                        x:FieldModifier="public"
                        OpenPaneLength="200"
                        FlowDirection="LeftToRight"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="True"
                        ItemInvoked="MainNavigationView_ItemInvoked"
                        PaneDisplayMode="Auto">

            <muxc:NavigationView.MenuItems>

                <muxc:NavigationViewItem x:Name="BookcaseItem"
                                   d:Content="书架"
                                    x:Uid="BookcaseItem"
                                    Icon="Library"
                                    ToolTipService.ToolTip="所有漫画" />
                <muxc:NavigationViewItem d:Content="书库"
                                         x:Uid="ListItem"
                                         Icon="List"
                                         x:Name="ListItem"
                                         MenuItemsSource="{x:Bind collectionObserver.MangaFolders}" 
                                         ToolTipService.ToolTip="已固定文件夹">
                    <!--<muxc:NavigationViewItem.ContentTemplate>
                        <DataTemplate x:DataType="vm:MangasFolder">
                            <TextBlock Text="{x:Bind FolderName}" />
                        </DataTemplate>
                    </muxc:NavigationViewItem.ContentTemplate>-->
                </muxc:NavigationViewItem>
                <muxc:NavigationViewItem x:Name="ReadItem"
                                    x:Uid="ReadItem"
                                    d:Content="正在阅读"
                                    Icon="Read"
                                    ToolTipService.ToolTip="正在阅读" />
            </muxc:NavigationView.MenuItems>
            <muxc:NavigationView.Content>
                <Frame x:Name="MainFrame"
                       x:FieldModifier="public" />
            </muxc:NavigationView.Content>
        </muxc:NavigationView>
    </Grid>
</Page>