<Page x:Class="EroMangaManager.Views.FunctionChildPages.FindSameManga"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:model="using:EroMangaManager.Models"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <ListView x:Name="listView"
                  SelectionMode="None"
                  ItemContainerStyle="{StaticResource ListViewItemStyle_1}"
                  ItemsSource="{x:Bind repeat,Mode=OneWay}"
                  Grid.Column="1">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:RepeatMangaBookGroup">
                    <StackPanel  Orientation="Vertical"
                                 Loaded="StackPanel_Loaded">
                        <TextBlock Margin="4"
                                   Text="{x:Bind  Key}"
                                   FontSize="24" />
                        <ListView ItemsSource="{x:Bind }" ItemContainerStyle="{StaticResource ListViewItemStyle_1}"
                                  SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="model:MangaBook">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition  Width="*" />
                                            <ColumnDefinition  Width="5*" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Image Grid.Column="0" 
                                               Source="{x:Bind Cover}"
                                               Grid.RowSpan="2" />
                                            <TextBlock Grid.Column="1" Text="{x:Bind FilePath}" VerticalAlignment="Center"
                                                       FontSize="20"
                                                       TextWrapping="Wrap"
                                                   Grid.RowSpan="2" />
                                        <Button x:Uid="OpenButton"
                                                Click="Button_Click_1"
                                                Grid.Column="2" />
                                        <Button x:Uid="DeleteButton" Grid.Column="2"
                                                    Click="Button_Click"
                                                Grid.Row="1" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>