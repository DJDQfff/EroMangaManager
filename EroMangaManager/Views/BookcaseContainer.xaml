<Page
    x:Class="EroMangaManager.Views.BookcaseContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EroMangaManager.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        
    <Grid.RowDefinitions>
        <RowDefinition Height="auto" />
        <RowDefinition />
    </Grid.RowDefinitions>
    <CommandBar d:Background="Red" Grid.Row="0" x:Name="BookcaseCommandBar" VerticalAlignment="Stretch"
                Background="Transparent">
        <AppBarButton Click="TranslateEachMangaName"
                      x:Uid="TranslateButton"
                      Icon="Font"
                      Label="翻译" />
        <AppBarButton Click="RefreshMangaList"
                      Icon="Refresh"
                      x:Uid="RefreshButton"
                      Label="刷新" />
        </CommandBar>
                    <Frame x:Name="ShowBookcase" Grid.Row="1"/>

    </Grid>

</Page>
