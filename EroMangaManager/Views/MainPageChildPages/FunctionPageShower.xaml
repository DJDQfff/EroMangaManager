<Page x:Class="EroMangaManager.Views.MainPageChildPages.FunctionPageShower"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:converter="using:EroMangaManager.ValueConverters"
xmlns:app="using:EroMangaManager"
      mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/./Themes/FunctionShowerControl.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Margin="36,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock x:Uid="/Resources/GollectionVMInitialingHint"
                   Style="{StaticResource HintTextBlockStyle}"
                   Visibility="{x:Bind app:App.Current.GlobalViewModel.IsContentInitializing,Mode=OneTime,Converter={StaticResource  controlvisibilityconverter}}" />

        <GridView Grid.Row="1">
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Width"
                            Value="150" />
                </Style>
            </GridView.ItemContainerStyle>
            <Button  x:Name="Function_FindSameMangaName"
                     x:Uid="/Resources/Function_FindSameMangaName"
                     Background="{x:Bind Converter={StaticResource randomcolor },Mode=OneTime}"
            Click="Button_Click" />
            <Button x:Name="Function_RemoveRepeatTags"
                    x:Uid="/Resources/Function_RemoveRepeatTags"
                    HorizontalAlignment="Stretch"
                    Background="{x:Bind Converter={StaticResource randomcolor },Mode=OneTime}"
                    Click="Button_Click" />
        </GridView>
    </Grid>
</Page>