<Application x:Class="EroMangaManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:winui="using:Microsoft.UI.Xaml.Controls"
             xmlns:converter="using:EroMangaManager.ValueConverters">
    <Application.Resources>
        <winui:XamlControlsResources>    
            
            <winui:XamlControlsResources.MergedDictionaries>
                <ResourceDictionary Source="Themes/DefaultTheme.xaml" />
            </winui:XamlControlsResources.MergedDictionaries>      
            
            <converter:ControlVisibilityFromNull x:Key="nullvisibilityconverter" />

            <converter:ControlVisibilityFromCount x:Key="countvisibilityconverter" />
            <converter:GetRandomSolidColorBrush x:Key="randomcolor" />
            <converter:FileSizeConverter x:Key="filesizeConverter" />
            <!--<Color x:Key="SystemAccentColor">#FFA500</Color>-->

        </winui:XamlControlsResources>


    </Application.Resources>
</Application>