<Application x:Class="EroMangaManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="using:EroMangaManager.ValueConverters">
    <Application.Resources>
        <ResourceDictionary>
            <converter:ControlVisibility x:Key="controlvisibilityconverter" />
            <converter:GetRandomSolidColorBrush x:Key="randomcolor" />
            <converter:FileSizeConverter x:Key="filesizeConverter" />
            <!--<Color x:Key="SystemAccentColor">#FFA500</Color>-->

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DefaultTheme.xaml" />
                <ResourceDictionary Source="Themes/TitleContentPairTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>