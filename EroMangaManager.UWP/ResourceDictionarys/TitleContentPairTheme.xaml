<ResourceDictionary
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBlock"
           x:Key="TitleOfPair">
        <Setter Property="FontSize"
                Value="36" />
        <Setter Property="TextWrapping"
                Value="Wrap" />
    </Style>
    <Style TargetType="TextBlock"
           x:Key="ContentOfPair">
        <Setter Property="FontSize"
                Value="16" />
        <Setter Property="TextWrapping"
                Value="Wrap" />
    </Style>
    
</ResourceDictionary>