<Page x:Class="EroMangaManager.Views.ErrorZipPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:EroMangaManager.Views"
      xmlns:manga="using:EroMangaManager.Models"
      xmlns:root="using:EroMangaManager"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ListView x:Name="ErrorZipVIewListView"
                  ItemsSource="{x:Bind root:MainPage.current.collectionObserver.ErrorZip }"
                  VerticalAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="manga:MangaBook">
                    <TextBlock Text="{x:Bind MangaName}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>